        function initDonateBar() {
          const amountBtns = document.querySelectorAll('.donate-amount');
          const freqBtns = document.querySelectorAll('.donate-freq');

          function activate(group: NodeListOf<Element>, clicked: Element) {
            group.forEach(btn => {
              btn.classList.remove('active', 'bg-teal', 'text-white');
              btn.classList.add('bg-white', 'text-navy');
            });
            clicked.classList.remove('bg-white', 'text-navy');
            clicked.classList.add('active', 'bg-teal', 'text-white');
          }

          // Sync selection across mobile/desktop versions
          amountBtns.forEach(btn => {
            btn.addEventListener('click', () => {
              const amount = btn.getAttribute('data-amount');
              // Activate all buttons with the same amount (syncs mobile/desktop)
              amountBtns.forEach(b => {
                if (b.getAttribute('data-amount') === amount) {
                  b.classList.remove('bg-white', 'text-navy');
                  b.classList.add('active', 'bg-teal', 'text-white');
                } else {
                  b.classList.remove('active', 'bg-teal', 'text-white');
                  b.classList.add('bg-white', 'text-navy');
                }
              });
            });
          });

          freqBtns.forEach(btn => {
            btn.addEventListener('click', () => {
              const freq = btn.getAttribute('data-freq');
              // Activate all buttons with the same freq (syncs mobile/desktop)
              freqBtns.forEach(b => {
                if (b.getAttribute('data-freq') === freq) {
                  b.classList.remove('bg-white', 'text-navy');
                  b.classList.add('active', 'bg-teal', 'text-white');
                } else {
                  b.classList.remove('active', 'bg-teal', 'text-white');
                  b.classList.add('bg-white', 'text-navy');
                }
              });
            });
          });
