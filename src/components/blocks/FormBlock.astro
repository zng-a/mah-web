---
interface Props {
  block: {
    form?: unknown;
    heading?: string | null;
    description?: string | null;
  };
}

const { block } = Astro.props;
---

<section class="px-5 md:px-10 py-8 lg:py-12">
  <div class="max-w-[720px] mx-auto">
    {block.heading && (
      <h2 class="text-[26px] lg:text-[32px] font-bold text-navy text-center mb-2">{block.heading}</h2>
    )}
    {block.description && (
      <p class="text-muted text-[15px] lg:text-[17px] text-center mb-8">{block.description}</p>
    )}
    <div class="bg-teal-tint rounded-xl lg:rounded-2xl p-6 lg:p-8">
      <p class="text-muted text-center text-[15px]">Form integration coming soon.</p>
    </div>
  </div>
</section>
